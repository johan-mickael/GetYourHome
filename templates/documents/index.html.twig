{% extends 'base.html.twig' %}

{% block title %}Documents index{% endblock %}

{% block body %}
    <h1>Documents index</h1>

    <a class="btn btn-primary" href="{{ path('documents_new') }}">Ajouter un Document</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.name }}</td>
                <td>
                    <a href="{{ path('documents_show', {'id': document.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('documents_edit', {'id': document.id}) }}"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('documents_delete', {'id': document.id}) }}"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
