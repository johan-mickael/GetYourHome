<form style="display: contents;" method="post" action="{{ path('projets_delete', {'id': projet.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce projet ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Supprimer</button>
</form>
