{% extends 'base.html.twig' %}

{% block title %}Etapes index{% endblock %}

{% block body %}
    <h1>Etapes index</h1>

    <a class="btn btn-primary" href="{{ path('etapes_new') }}">Ajouter une Etapes</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in etapes %}
            <tr>
                <td>{{ etape.id }}</td>
                <td>{{ etape.libelle }}</td>
                <td>
                    <a href="{{ path('etapes_show', {'id': etape.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('etapes_edit', {'id': etape.id}) }}"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('etapes_delete', {'id': etape.id}) }}"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
