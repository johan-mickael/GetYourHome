{% extends 'base.html.twig' %}

{% block title %}Etapes index{% endblock %}

{% block body %}
<h3>Liste des étapes</h3>

<a class="btn btn-success float-end" href="{{ path('etapes_new') }}"><i class="fas fa-plus"></i> Ajouter une étape</a>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nom</th>
			<th class="text-center">-</th>
		</tr>
	</thead>
	<tbody>
		{% for etape in etapes %}
		<tr>
			<td class="fw-bold">{{ etape.id }}</td>
			<td>{{ etape.libelle }}</td>
			<td class="text-center">
				<div class="btn-group" role="group" aria-label="Basic example">
					<a href="{{ path('etapes_show', {'id': etape.id}) }}"><button type="button"
							class="btn btn-primary btn-sm show-btn"><i class="fas fa-eye"></i></button></a>
					<a href="{{ path('etapes_edit', {'id': etape.id}) }}"><button type="button"
							class="btn btn-secondary btn-sm edit-btn"><i class="fas fa-edit"></i></button></a>
					{% include "etapes/_delete_button.html.twig" %}
				</div>
			</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="3">no records found</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock %}